---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../components/GlobalStyles.astro";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="google-site-verification" content="dWbV0dMntpWyeRB3Cwrx8559JBQ9Fbaz_prWtkphc8E" />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/gh/mailtoharshit/San-Francisco-Font-/sanfrancisco.css"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Share+Tech&family=Share+Tech+Mono&display=swap"
            rel="stylesheet"
        />
        <script
            src="https://cdn.jsdelivr.net/npm/tsparticles-slim@2.0.6/tsparticles.slim.bundle.min.js"
            is:inline></script>

        <script>
            import Alpine from "alpinejs";

            Alpine.store("selectedOption", "div1");
            Alpine.store("weatherOption", "div1");
            Alpine.start();
        </script>

        <title>MMSU Auto Crop Calendar</title>
        <link rel="icon" type="image/x-icon" href="/images/favicon.svg" />
    </head>

    <body>
        <Navbar />
        <!-- slot is index page -->
        <slot />
        <Footer />
    </body>
</html>

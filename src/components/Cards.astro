---
const { cardnum, title, action, image, link } = Astro.props;
---

<a href={link}>
    <div class="card-container">
        <div class="card-number">{cardnum}</div>
        <img src={image} alt="" />
        <div class="card-title">
            <div class="title">{title}</div>
            <div class="action">{action}</div>
        </div>
    </div>
</a>
<style lang="scss">
    a {
        cursor: pointer;
        text-decoration: none;
        display: grid;
    }
    .card-container:hover {
        scale: 1.025;
        .action {
            color: #7cf095;
        }
    }
    .card-container {
        background: linear-gradient(
            180deg,
            #1e2320 0%,
            rgba(0, 0, 0, 0.77) 83%,
            rgba(30, 35, 32, 0.85) 100%
        );
        box-shadow: 0px 8.25px 3px 0px rgba(0, 0, 0, 0.33);
        padding: 2.5rem;
        max-height: 542px;
        max-width: 400px;
        box-sizing: border-box;
        color: #fff;

        display: flex;
        flex-direction: column;
        gap: 2rem;

        .card-number {
            display: flex;
            justify-content: flex-start;
            font-size: 1.7rem;
            font-family: "Share Tech Mono";
        }
        img {
            width: 100%;
            height: auto;
            max-height: 220px;
        }
        img:hover {
            fill: #7cf095;
        }
        .card-title {
            display: flex;
            justify-content: space-between;

            position: relative;

            .title {
                font-size: clamp(2.8rem, 1vw + 1rem, 5.5rem);
                font-family: "Share Tech Mono";
            }
            .action {
                padding-top: 0.4rem;
                writing-mode: vertical-rl;
                transform: rotate(-180deg);
                font-family: "Share Tech";
            }
        }
    }
</style>

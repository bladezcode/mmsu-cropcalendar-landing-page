---
const { cardnum, title, background, link } = Astro.props;
---

<a href={link}>
    <div class="card-container" style={background}>
        <div class="card-number">{cardnum}</div>
        <div class="svg">
            <slot />
        </div>
        <div class="card-title">
            <div class="title">{title}</div>
            <div class="action">learn more</div>
        </div>
    </div>
</a>
<style lang="scss">
    a {
        cursor: pointer;
        text-decoration: none;
        display: grid;
    }
    .card-container:hover {
        scale: 1.025;
        transition: all 1s ease;
        .action {
            font-weight: bold;
        }
    }
    .card-container:not(:hover) {
        transition: all 1s ease;
    }
    .card-container {
        user-select: none;
        box-shadow: 0px 8.25px 3px 0px rgba(0, 0, 0, 0.33);
        padding: 2.5rem;
        max-height: 542px;
        max-width: 400px;
        box-sizing: border-box;

        display: flex;
        flex-direction: column;
        gap: 2rem;

        .card-number {
            display: flex;
            justify-content: flex-start;
            font-size: 1.7rem;
            font-family: "Share Tech Mono";
        }

        .card-title {
            display: flex;
            justify-content: space-between;
            gap: 3rem;

            .title {
                font-size: clamp(2rem, 1vw + 1rem, 5.5rem);
                font-family: "Share Tech Mono";
            }
            .action {
                padding-top: 0.4rem;
                writing-mode: vertical-rl;
                transform: rotate(-180deg);
                font-family: "Share Tech";
            }
        }
    }
</style>

---
const { content, title, image, link } = Astro.props;
---

<div class="container">
    <div class="frame">
        <svg
            width="100%"
            height="100%"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            preserveAspectRatio="none"
            viewBox="0 0 488.5 249.5"
        >
            <path
                d="M0.5 0.5H440.813L488.5 44.4386V249.5H0.5V0.5Z"
                stroke="#B7B7B7"></path>
        </svg>
    </div>

    <div class="content">
        <div class="title">{title}</div>
        <img src={image} alt="" />
        <p>
            {content}
        </p>
        <a href={link}>LEARN MORE</a>
    </div>
</div>

<style lang="scss">
    .container {
        max-width: 489px;

        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        box-sizing: border-box;
        .frame {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            svg {
                overflow: visible;
            }
        }

        .content {
            z-index: 1;
            display: grid;
            grid-gap: 1rem;
            grid-template-columns: 1fr 2fr;
            grid-template-rows: repeat(3, auto);
            .title {
                grid-area: 1 / 1 / 2 / 3;
                font-size: 1.25rem;
                font-family: "Share Tech Mono", monospace;
                font-weight: 300;
            }
            img {
                grid-area: 2 / 1 / 4 / 2;

                width: 100%;
                height: auto;
            }
            p {
                grid-area: 2 / 2 / 3 / 3;
                font-size: clamp(0.5rem, 1vw + 0.5rem, 0.875rem);
                text-align: justify;
            }
            a {
                font-size: clamp(0.5rem, 1vw + 0.5rem, 0.875rem);
                justify-self: end;
                grid-area: 3 / 2 / 4 / 3;
                text-decoration: none;
                font-weight: 450;
                color: black;
            }
        }
    }
    @media screen and (max-width: 600px) {
        .container {
            margin: 0 1rem;
        }
    }
</style>
